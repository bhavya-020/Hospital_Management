@model AppointmentModel

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.AppointmentId)

    @Html.DropDownListFor(x=>x.DoctorId,
    new SelectList(ViewBag.Doctors, "DoctorId", "DoctorName"),
  new { @class = "form-control" })

@Html.DropDownListFor(x=>x.PatientId,
  new SelectList(ViewBag.Patients, "PatientId", "PatientName"),
  new { @class = "form-control" })

@Html.TextBoxFor(x=>x.AppointmentDate,
  new { type = "date", @class = "form-control" })

@Html.TextBoxFor(x=>x.AppointmentTime,
  new { type = "time", @class = "form-control" })

<br />
<input type="submit" value="Update" class="btn btn-warning" />
}
